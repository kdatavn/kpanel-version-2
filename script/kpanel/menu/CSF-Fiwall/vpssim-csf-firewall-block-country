#!/bin/bash 
. /home/kpanel.conf
rm -rf /tmp/kpanelcheckcountrycode*
echo "========================================================================="
if [ -f /etc/csf/csf.conf ]; then
test_csf=$(csf -v | awk 'NR==1 {print $NF}')
if [ "$test_csf" == "enable" ]; then
echo "Chuc nang nay se bat CSF Firewall neu ban dang tat no."
echo "-------------------------------------------------------------------------" 
fi
echo "Su dung chuc nang nay de block mot dat nuoc truy cap website tren server."
echo "-------------------------------------------------------------------------" 
echo "Ban can nhap ma nuoc gom 2 chu cai. Ban co the nhap nhieu dat nuoc bang"
echo "-------------------------------------------------------------------------" 
echo "cach su dung dau [,] va khong co [space] giua cac ma nuoc. VD: “CN,RU,DE” "
echo "-------------------------------------------------------------------------" 
echo "de block China, Russia va Germany."
echo "-------------------------------------------------------------------------" 
echo "Xem danh sach ma nuoc tai: https://kdata.vn/country-codes.txt"
echo "========================================================================="
echo -n "Nhap ma nuoc [ENTER]: " 
read countrycode
countrycode=`echo $countrycode | tr '[a-z]' '[A-Z]'`
countrycode=`echo $countrycode | sed 's/\///' | sed 's/\///' | sed 's/\///'`
echo "$countrycode" > /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
sed -i 's/,$//' /tmp/kpanelcheckcountrycode
cat /tmp/kpanelcheckcountrycode | awk -F, '{for (i=1;i<=NF;i++)print $i}' > /tmp/kpanelcheckcountrycode_list
if [ ! "$(grep ";" /tmp/kpanelcheckcountrycode)" = "" ]; then
clear
echo "========================================================================= "
echo "Ban khong the su dung phim [ ; ]"
echo "-------------------------------------------------------------------------"
echo "Ban hay nhap lai !"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi
if [ "$countrycode" = "" ]; then
clear
echo "========================================================================="
echo "You typed wrong, please fill accurately"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi

if [ ! "$(grep "\ " /tmp/kpanelcheckcountrycode)" = "" ]; then
clear
echo "========================================================================= "
echo "Ban khong the su dung phim [ space ]."
echo "-------------------------------------------------------------------------"
echo "Ban hay nhap lai !"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi
if [ ! "$(grep "\." /tmp/kpanelcheckcountrycode)" = "" ]; then
clear
echo "========================================================================= "
echo "Ban khong the su dung phim [ . ]"
echo "-------------------------------------------------------------------------"
echo "Ban hay nhap lai !"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi
rm -rf /tmp/kpanelcheckcountrycode_list_show
rm -rf /tmp/kpanelcheckcountrycode_code_trung_nhau
rm -rf /tmp/kpanelcheckcountrycode_code_trung_nhau2
country_list=`cat /tmp/kpanelcheckcountrycode_list`

for manuoc in $country_list; do
 
 if [ ! ${#manuoc}  == "2" ]; then 
clear
echo "========================================================================= "
echo "Ma nuoc $manuoc khong ton tai."
echo "-------------------------------------------------------------------------"
echo "Ban hay nhap lai !"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi

if [ "$(grep "|${manuoc}|" /etc/kpanel/menu/CSF-Fiwall/kpanel-country-code)" = "" ]; then
clear
echo "========================================================================= "
echo "Ma nuoc $manuoc khong ton tai."
echo "-------------------------------------------------------------------------"
echo "Ban hay nhap lai !"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
else
echo "$(grep "|${manuoc}|" /etc/kpanel/menu/CSF-Fiwall/kpanel-country-code | sed "s/|${manuoc}|//")" >> /tmp/kpanelcheckcountrycode_list_show
fi

echo "${manuoc}" >> /tmp/kpanelcheckcountrycode_code_trung_nhau
grep "${manuoc}" /tmp/kpanelcheckcountrycode_code_trung_nhau > /tmp/kpanelcheckcountrycode_code_trung_nhau2
codetrungnhau=`cat /tmp/kpanelcheckcountrycode_code_trung_nhau2`
if [ ! ${#codetrungnhau} = "2" ]; then 
clear
echo "========================================================================= "
echo "Ma nuoc $manuoc xuat hien nhieu hon 1 lan trong danh sach ban nhap."
echo "-------------------------------------------------------------------------"
echo "Ban hay nhap lai !"
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi

done
sonuoc=`cat /tmp/kpanelcheckcountrycode_list_show | wc -l`
if [ ! "$sonuoc" = 1 ]; then
nuoc=countries
hoithoai1=`echo "Danh sach cac nuoc ban muon block boi CSF Firewall:"`
hoithoai2=`echo "Ban muon block $sonuoc nuoc trong danh sach ?"`
else
nuoc=country
hoithoai1=`echo "Nuoc ban muon block boi CSF Firewall:"`
hoithoai2=`echo "Ban muon block dat nuoc nay ?"`
fi
echo "========================================================================="
echo "$hoithoai1"
echo "-------------------------------------------------------------------------"
cat /tmp/kpanelcheckcountrycode_list_show | pr -2 -t
echo "========================================================================="
  read -r -p "$hoithoai2 [y/N] " response
case $response in
    [yY][eE][sS]|[yY]) 
    echo "-------------------------------------------------------------------------"
    echo "Please wait ...";sleep 1
sed -i "s/.*CC_DENY\ =.*/CC_DENY = \"$(cat /tmp/kpanelcheckcountrycode)\"/g" /etc/csf/csf.conf
if [ "$test_csf" == "enable" ]; then
csf -e
fi
/etc/kpanel/menu/CSF-Fiwall/kpanel-re-start-khoi-dong-lai-csf-lfd
clear
echo "========================================================================="
echo "Cau hinh CSF Firewall block $sonuoc $nuoc hoan thanh."
echo "-------------------------------------------------------------------------"
echo "$nuoc List:"
echo "-------------------------------------------------------------------------"
cat /tmp/kpanelcheckcountrycode_list_show | pr -2 -t
rm -rf /tmp/kpanelcheckcountrycode*
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
;;
    *)
clear 
echo "========================================================================= "
echo "Cancel !"
rm -rf /tmp/kpanelcheckcountrycode*
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
        ;;
esac
else
echo "========================================================================= "
echo "Chuc nang nay can CSF Firewall de hoat dong"
echo "-------------------------------------------------------------------------"
echo "CSF Firewall chua duoc cai dat tren server! "
echo "-------------------------------------------------------------------------"
read -r -p "Ban co muon cai dat CSF Firewall vao server [y/N] " response
case $response in
    [yY][eE][sS]|[yY]) 
/etc/kpanel/menu/CSF-Fiwall/kpanel-cai-dat-csf-csf
;;
esac
clear
echo "========================================================================= "
echo "Ban huy bo cai dat CSF Firewall ! "
/etc/kpanel/menu/CSF-Fiwall/kpanel-csf-firewall-menu
exit
fi




